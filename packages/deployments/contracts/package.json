{
  "name": "@connext/smart-contracts",
  "version": "2.2.2-alpha.4",
  "description": "",
  "license": "ISC",
  "author": "Connext",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/**/*",
    "!dist/src/cli/**/*",
    "!deploy/**/*",
    "!tasks/**/*",
    "artifacts",
    "deployments.json",
    "local.deployments.json",
    "devnet.deployments.json",
    "contracts",
    "abi"
  ],
  "scripts": {
    "allowlist": "ts-node ./src/allowlist.ts",
    "build": "hardhat compile && tsc --build ./tsconfig.build.json",
    "clean": "forge clean && rimraf ./dist ./tsconfig.tsBuildInfo ./artifacts_build ./cache",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js",
    "create-router": "ts-node ./src/createRouter.ts",
    "devnet:deploy": "ts-node ./src/devnet/devnetDeploy.ts",
    "devnet:init": "ts-node ./src/devnet/devnetInit.ts",
    "devnet:spawn": "ts-node ./src/devnet/spawnDevnet.ts",
    "export": "ts-node ./src/exportDeployments.ts",
    "firedrill": "ts-node ./src/cli/watcher/main.ts",
    "forge": "forge",
    "forge:install": "forge install",
    "hardhat": "hardhat",
    "initialize": "ts-node ./src/cli/init/main.ts",
    "lint": "eslint ./src --ext .ts --env node && yarn lint:sol",
    "lint-w:check": "yarn lint-w:sol-tests && yarn lint-w:sol-logic && forge fmt './contracts/solidity/chimera' --check",
    "lint-w:sol-logic": "solhint -c .solhint-w.json './contracts/solidity/chimera/**/*.sol'",
    "lint-w:sol-tests": "solhint -c .solhint.tests.json 'solidity/test/unit/**/*.sol' 'solidity/test/integration/**/*.sol'",
    "lint:fix": "sort-package-json && forge fmt './contracts/solidity/chimera' && yarn lint-w:sol-tests --fix && yarn lint-w:sol-logic --fix",
    "lint:sol": "solhint --config ./.solhint.json \"contracts/**/*.sol\"",
    "local:init": "ts-node ./src/localnet/localInit.ts",
    "ownership": "ts-node ./src/cli/ownership/main.ts",
    "prettier:sol": "prettier --write './contracts/**/*.sol' && prettier --write './contracts_forge/**/*.sol'",
    "prepublish": "yarn build",
    "purge": "yarn clean && rimraf ./node_modules ./cache ",
    "size": "hardhat size-contracts",
    "test": "yarn forge test --no-match-path '*/fork/**.sol'",
    "test:fork": "yarn forge test --match-path '*/fork/**.sol'",
    "test:upgrade": "ts-node ./src/cli/upgrade/main.ts",
    "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "version": "yarn version"
  },
  "lint-staged": {
    "*.{js,css,md,ts,sol}": "forge fmt",
    "*.sol": "solhint -c .solhint-w.json --fix  './contracts/solidity/chimera/**/*.sol' && solhint --fix -c .solhint.tests.json 'solidity/test/unit/**/*.sol'",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@eth-optimism/sdk": "2.1.0"
  },
  "devDependencies": {
    "@arbitrum/sdk": "3.1.11",
    "@certusone/wormhole-sdk": "0.9.21",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@connext/nxtp-utils": "workspace:*",
    "@consensys/linea-sdk": "0.1.6",
    "@gelatonetwork/relay-context": "2.1.0",
    "@matterlabs/hardhat-zksync-deploy": "0.6.3",
    "@matterlabs/hardhat-zksync-solc": "0.3.17",
    "@matterlabs/hardhat-zksync-verify": "0.1.7",
    "@nomiclabs/hardhat-ethers": "2.2.2",
    "@nomiclabs/hardhat-etherscan": "3.1.6",
    "@nomiclabs/hardhat-waffle": "2.0.5",
    "@openzeppelin/contracts": "4.8.0",
    "@openzeppelin/contracts-upgradeable": "4.8.0",
    "@openzeppelin/hardhat-upgrades": "1.17.0",
    "@sinclair/typebox": "0.25.21",
    "@tenderly/hardhat-tenderly": "^1.7.7",
    "@typechain/ethers-v5": "10.2.0",
    "@typechain/hardhat": "6.1.5",
    "@types/chai": "4.3.4",
    "@types/command-line-args": "5.2.0",
    "@types/mocha": "10.0.1",
    "@types/node": "18.13.0",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "chai": "4.3.7",
    "command-line-args": "5.2.1",
    "eslint": "8.34.0",
    "ethereum-waffle": "3.4.4",
    "ethers": "5.7.2",
    "hardhat": "2.16.0",
    "hardhat-abi-exporter": "2.10.1",
    "hardhat-contract-sizer": "2.8.0",
    "hardhat-deploy": "0.11.43",
    "hardhat-diamond-abi": "3.0.1",
    "hardhat-gas-reporter": "1.0.9",
    "lint-staged": "13.2.2",
    "prettier": "2.8.4",
    "prettier-plugin-solidity": "1.1.2",
    "rimraf": "3.0.2",
    "sinclair": "0.2.0",
    "sinon": "15.0.1",
    "solhint": "3.5.1",
    "solhint-plugin-defi-wonderland": "1.1.2",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.22",
    "sort-package-json": "2.4.1",
    "ts-node": "10.9.1",
    "typechain": "8.1.1",
    "typescript": "4.9.5",
    "zksync-web3": "0.14.3"
  },
  "gitHead": "937a7cde93e6ac1e151c6374f48adf83d3fa4ec6",
  "stableVersion": "0.1.25"
}
