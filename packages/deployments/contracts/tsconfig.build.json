{
  "extends": "../../../config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "dist",
    "typeRoots": ["./typechain_types", "./node_modules/@types"],
    "rootDir": ".",
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsBuildInfo"
  },
  "include": [
    "hardhat.config.ts",
    "./hardhat/scripts",
    "./hardhat/deploy",
    "./hardhat/deployHelpers",
    "./hardhat/deployConfig",
    "./typechain_types",
    "./hardhat/tasks/**/*.ts",
    "./hardhat/src/**/*.ts",
    "./artifacts",
    "./deployments.json",
    "./devnet.deployments.json",
    "./local.deployments.json",
    "./abi/**/*.json",
    "./hardhat/src/init/*.ts"
  ],
  "exclude": ["contracts/solidity/test/**/*.t.sol"],
  "references": [
    {
      "path": "../../utils/tsconfig.build.json"
    }
  ]
}
