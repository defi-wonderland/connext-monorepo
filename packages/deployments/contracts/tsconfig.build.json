{
  "extends": "../../../config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "dist",
    "typeRoots": ["./artifacts/typechain_types", "./node_modules/@types"],
    "rootDir": ".",
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsBuildInfo"
  },
  "include": [
    "hardhat.config.ts",
    "./hardhat/scripts",
    "./hardhat/deploy",
    "./hardhat/deployHelpers",
    "./hardhat/deployConfig",
    "./hardhat/tasks/**/*.ts",
    "./hardhat/src/**/*.ts",
    "./hardhat/src/init/*.ts",
    "./deployments.json",
    "./devnet.deployments.json",
    "./local.deployments.json",
    "./artifacts/typechain-types",
    "./artifacts/abi/**/*.json"
  ],
  "exclude": ["contracts/solidity/test/**/*.t.sol"],
  "references": [
    {
      "path": "../../utils/tsconfig.build.json"
    }
  ]
}
